<%layout("/layouts/boilerplate")%>
<!-- <%=success%> -->
<body>
    <h3 class="heading">All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>New Listing</button>
    </form> -->
<div class="card-row row-cols-xl-3 row row-cols-lg-3 row-cols-md-2 row-cols-xs-1">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%=listing._id%>" class="one-card-container">
        <div class="card all-card">
            <img src="<%=listing.image.url%>" class="card-img-top" alt="listing image" style="height: 20rem">
            <div class="card-body">
              <p class="card-text">
                <b><%=listing.title%> </b><br>
                &#8377; <%=listing.price.toLocaleString("en-IN")%> /night
            </p>
            </div>
          </div>
        </a>
        <% } %>
</div>
</body>
