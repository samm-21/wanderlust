<%layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="heading">Add New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required/>
                    <div class="valid-feedback">Title looks good.</div>
                    <div class="invalid-feedback">Title cannot be empty.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                    <div class="valid-feedback">Description is perfect.</div>
                    <div class="invalid-feedback">Enter a short description.</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input name="listing[image]" type="file" class="form-control" required/>
                    <div class="invalid-feedback">Image is required.</div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="eg. &#8377; 1800/night" type="text" class="form-control" required />
                    <div class="invalid-feedback">Price is required.</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="title" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="eg. Mumbai, Maharashtra" type="text" class="form-control" required>
                        <div class="invalid-feedback">Location is required.</div>
                    </div>
    
                    <div class="mb-3 col-md-8">
                        <label for="title" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="eg. India" type="text" class="form-control" required>
                        <div class="invalid-feedback">Country is required.</div>
                    </div>
                </div>

                <button class="btn btn-dark">Create</button>
            </form>
        </div>
    </div>
</body>